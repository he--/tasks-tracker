{% include 'header.html.twig' %}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lista de Status</h6>
        </div>
        <div class="card-body">
            <div class="float-right mb-2">
                <a href="{{ path('status_cadastrar') }}" class="btn btn-primary btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-plus"></i>
                    </span>
                    <span class="text">Cadastrar</span>
                </a>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Descricao</th>
                            <th style="width: 50px"></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Descricao</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        {% for status in statusList %}
                        <tr>
                            <td>{{ status.descricao }}</td>
                            <td>
                                <a href="{{ path('status_editar', {'status': status.id}) }}" class="btn btn-info btn-circle btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

{% include 'footer.html.twig' %}
