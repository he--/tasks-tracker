{% include 'header.html.twig' %}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lista de Projetos em Andamento</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Descricao</th>
                        <th>Gerente</th>
                        <th>Data Cadastro</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Nome</th>
                        <th>Descricao</th>
                        <th>Gerente</th>
                        <th>Data Cadastro</th>
                        <th></th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for projeto in projetos %}
                        <tr>
                            <td>{{ projeto.nome }}</td>
                            <td>{{ projeto.descricao }}</td>
                            <td>{{ projeto.gerente }}</td>
                            <td>{{ projeto.dtCadastro| date("m/d/Y") }}</td>
                            <td>
                                <div style="display: flex; align-items: center">
                                    <a href="editar/{{ projeto.id }}" class="btn btn-outline-warning btn-circle btn-sm" style=" margin-right: 8px">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="{{ path('visualizar_projeto', {'projeto': projeto.id}) }}" class="btn btn-outline-info btn-circle btn-sm">
                                        <i class="fas fa-arrow-right"></i>
                                    </a>
                                </div>

                            </td>
                        </tr>

                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <a href="{{ path('index') }}" class="btn btn-outline-success">
                                                            <span class="icon text-green-50">
                                                                <i class="fas fa-arrow-left"></i>
                                                            </span>
        <span class="text">Voltar</span>
    </a>
</div>


</div>

{% include 'footer.html.twig' %}
