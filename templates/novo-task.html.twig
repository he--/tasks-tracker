{% include 'header.html.twig' %}

    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Cadastrar Nova Task</h1>
        <p><b>Projeto</b>: {{ projeto.nome }}</p>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-sm-5">
                {{ form_row(form.nome) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-5">
                {{ form_row(form.descricao) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                {{ form_row(form.dtCadastro) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                {{ form_row(form.dtConclusao, ) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                {{ form_row(form.status) }}
            </div>
        </div>
        <a href="{{ path('task_projeto_listar', {'projeto': projeto.id}) }}" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-backward"></i>
            </span>
            <span class="text">Voltar</span>
        </a>
        <button class="btn btn-success btn-icon-split" type="submit">
            <span class="icon text-white-50">
                <i class="fas fa-save"></i>
            </span>
            <span class="text">Salvar</span>
        </button>
    </div>
    </div>

{% include 'footer.html.twig' %}
